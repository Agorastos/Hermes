        <TextBox Height="30" TextWrapping="Wrap" Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="460" Canvas.Top="25" Margin="20,0,0,0"/>
        <Button Content="Log in" Canvas.Left="1181" Canvas.Top="25" Width="75" Height="30" Background="White" BorderThickness="1,1,2,2" BorderBrush="#FFAEABAB"/>
        <Button Content="Settings" Canvas.Left="1111" Width="60" Height="30" Canvas.Top="25" Background="White" BorderThickness="1,1,2,2" BorderBrush="#FFAEABAB"/>
        <Button Content="Search" Canvas.Left="820" Canvas.Top="25" Width="50" Height="30" Margin="20,0,0,0" Background="White" BorderBrush="#FFAEABAB" BorderThickness="1,1,2,2"/>
    </Canvas>
</Page>
