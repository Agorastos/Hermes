      xmlns:local="clr-namespace:Hermes.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TopPage" Width="1274" Height="80">
    <Page.Background>
        <RadialGradientBrush>
            <GradientStop Color="#FF4BB68F" Offset="0"/>
            <GradientStop Color="#FF3AA27C" Offset="1"/>
        </RadialGradientBrush>
    </Page.Background>
    <Canvas Margin="0" Background="#FF05558D">
        <Button Content="Logo (HomePage)" Width="195" Height="70" Canvas.Left="5" Canvas.Top="5" Background="White"/>
