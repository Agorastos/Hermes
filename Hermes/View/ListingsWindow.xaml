            <DatePicker Canvas.Left="34" Canvas.Top="291" Width="140" Margin="0,-8,0,0"/>
        </Canvas>
        <Grid x:Name="gridListings" Width="1074" Background="#FFEEEEEE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400" Width="536*"/>
                <ColumnDefinition MinWidth="400" Width="536*"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="listviewListings" Margin="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Image x:Name="imgListingsSelected" Grid.Column="1" HorizontalAlignment="Left" Height="120" Margin="30,30,0,0" VerticalAlignment="Top" Width="120">
                <Image.Effect>
                    <DropShadowEffect/>
                </Image.Effect>
            </Image>
            <Label x:Name="lblListingSelectedTitle" Content="Listing Title" Grid.Column="1" HorizontalAlignment="Left" Margin="164,30,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="39" Width="343"/>
            <Label x:Name="lblListingSelectedUploader" Content="Listing Uploader" Grid.Column="1" HorizontalAlignment="Left" Margin="164,74,0,0" VerticalAlignment="Top" Width="186"/>
            <Label x:Name="lblListingSelectedContactInfo" Content="Listing Contact Info here&#xD;&#xA;more contact info " Grid.Column="1" HorizontalAlignment="Left" Margin="164,105,0,0" VerticalAlignment="Top" Width="186"/>
            <Label x:Name="lblListingSelectedDescription" Content="Listing description.&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="30,180,0,0" VerticalAlignment="Top" Height="393" Width="477"/>
        </Grid>
        <CheckBox x:Name="chboxListingsCategory0_Copy" Content="Category 0" Margin="0,0,0,588"/>
