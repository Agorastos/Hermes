            <ComboBox x:Name="comboxListingsPricePick" Canvas.Left="34" Canvas.Top="178" Width="140" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,-8,0,0"/>
            <CheckBox x:Name="chboxListingsCategory0" Content="Category0" Height="18" Canvas.Left="10" Canvas.Top="39" Width="98" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory1" Content="Category1" Height="18" Canvas.Left="106" Canvas.Top="39" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory2" Content="Category2" Height="18" Canvas.Left="10" Canvas.Top="57" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory3" Content="Category3" Height="18" Canvas.Left="106" Canvas.Top="57" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory4" Content="Category4" Height="18" Canvas.Left="10" Canvas.Top="77" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory5" Content="Category5" Height="18" Canvas.Left="106" Canvas.Top="77" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory6" Content="Category6" Height="18" Canvas.Left="10" Canvas.Top="97" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory7" Content="Category7" Height="18" Canvas.Left="106" Canvas.Top="97" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory8" Content="Category8" Height="18" Canvas.Left="10" Canvas.Top="117" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <CheckBox x:Name="chboxListingsCategory9" Content="Category9" Height="18" Canvas.Left="106" Canvas.Top="117" Width="94" Margin="0,-8,0,0" Foreground="White"/>
            <Label Content="Categories&#xA;" Canvas.Left="10" Canvas.Top="10" Height="29" Width="180" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,-8,0,0" Foreground="White"/>
            <Slider x:Name="slidListingsPriceCustom" Canvas.Left="34" Canvas.Top="205" Width="140" HorizontalAlignment="Center" VerticalAlignment="Center" AutoToolTipPlacement="BottomRight" Maximum="500" SmallChange="1" LargeChange="10" TickPlacement="BottomRight" TickFrequency="50" Value="-1" Cursor="Arrow" Background="#3F1F6B87" OpacityMask="Black" Margin="0,-8,0,0"/>
            <Label Content="Date Uploaded&#xA;" Canvas.Left="10" Canvas.Top="234" Height="30" Width="180" HorizontalContentAlignment="Center" Margin="0,-8,0,0" Foreground="White"/>
            <RadioButton x:Name="radbtnListingsDatePick" Content="" Canvas.Left="10" Canvas.Top="269" Margin="0,-8,0,0"/>
