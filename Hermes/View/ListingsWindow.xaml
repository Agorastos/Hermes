        <CheckBox x:Name="chboxListingsCategory7_Copy" Content="Category7" Margin="0,60,0,528"/>
        <CheckBox x:Name="chboxListingsCategory8_Copy" Content="Category8" Margin="0,80,0,508"/>
        <CheckBox x:Name="chboxListingsCategory9_Copy" Content="Category9" Margin="0,80,0,508"/>
