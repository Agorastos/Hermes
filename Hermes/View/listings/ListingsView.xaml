<Page x:Class="Hermes.View.ListingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hermes.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListingsPage" Width="1272" Height="630">
    <Canvas Margin="48,34,0,0">
        <Image x:Name="imgBackground" HorizontalAlignment="Left" Height="630" VerticalAlignment="Top" Width="1272" Source="/Hermes;component/View/Images/Background3.png" Canvas.Left="-46" Canvas.Top="-34"/>
        <Grid x:Name="gridListings" Width="1074" Height="630" Canvas.Left="152" Canvas.Top="-34">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400" Width="5*"/>
                <ColumnDefinition MinWidth="400" Width="4*"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="listviewListings" SelectionChanged="listviewListings_SelectionChanged_1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Description" Width="270" DisplayMemberBinding="{Binding Description}" />
                        <GridViewColumn Header="Active" Width="70" DisplayMemberBinding="{Binding Active}" />
                        <GridViewColumn Header="Price" Width="70" DisplayMemberBinding="{Binding Price}" />

                    </GridView>
                </ListView.View>
            </ListView>
            <Image x:Name="imgListingsSelected" Grid.Column="1" HorizontalAlignment="Left" Height="120" Margin="30,30,0,0" VerticalAlignment="Top" Width="120">
                <Image.Effect>
                    <DropShadowEffect/>
                </Image.Effect>
            </Image>
            <Label x:Name="lblListingSelectedTitle" Content="Listing Title" Grid.Column="1" Margin="164,30,30,560" FontSize="20" FontWeight="Bold" Height="40" Width="283"/>
            <Label x:Name="lblListingSelectedUploader" Content="Listing Uploader" Grid.Column="1" Margin="164,75,30,530" Height="25"/>
            <Label x:Name="lblListingSelectedContactInfoEmail" Content="Listing Contact Info (email) here " Grid.Column="1" Margin="164,100,30,505" Width="283" Height="25"/>
            <TextBlock x:Name="tbListingSelectedDescription" Grid.Column="1" HorizontalAlignment="Left" Margin="30,180,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Height="188" Width="417"/>
            <Button x:Name="btnListingSelectedFavorite" Content="Add to Favorites" Grid.Column="1" HorizontalAlignment="Left" Margin="30,373,0,0" VerticalAlignment="Top" Width="150" Click="BtnListingSelectedFavorite_Click"/>
            <Button x:Name="btnListingSelectedContact" Content="Contact Uploader" Grid.Column="1" HorizontalAlignment="Left" Margin="297,373,0,0" VerticalAlignment="Top" Width="150" Click="btnListingSelectedContact_Click"/>
            <Label x:Name="lblListingSelectedContactInfoEmail1" Content="Listing Contact Info (phone) here " Grid.Column="1" Margin="164,125,30,480" Width="283" Height="25"/>
        </Grid>
        <Frame Content="Frame" Height="603" VerticalAlignment="Top" Width="0" Canvas.Left="1226" Canvas.Top="-34"/>
        <Grid x:Name="canvasListingsFilters" HorizontalAlignment="Center" Canvas.Top="-34" Canvas.Left="-48" Background="White" Height="630" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="199*"/>
                <RowDefinition Height="116*"/>
            </Grid.RowDefinitions>
            <Label Content="Price Range&#xA;" HorizontalContentAlignment="Center" Foreground="#FF06558D" Margin="34,291,36,76" FontSize="16"/>
            <Label x:Name="labelCancelPriceRanges" Content="Cancel" HorizontalContentAlignment="Center" Foreground="#FF89C3EC" FontStyle="Italic" FontWeight="Bold" MouseLeftButtonDown="labelCancelPriceRanges_PreviewDragOver" Visibility="Hidden" Margin="4,140,141,228"/>
            <Label x:Name="labelCancelDateRanges" Content="Cancel" HorizontalContentAlignment="Center" Foreground="#FF89C3EC" FontStyle="Italic" FontWeight="Bold" MouseLeftButtonDown="labelCancelDateRanges_MouseLeftButtonDown" Visibility="Hidden" Margin="4,226,141,142"/>
            <RadioButton x:Name="radbtnListingsPricePick" Content="" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" GroupName="priceRangeGroup" Checked="radbtnListingsPricePick_Checked" Unchecked="radbtnListingsPricePick_Unchecked" Margin="10,327,172,53" RenderTransformOrigin="0.614,-0.056"/>
            <RadioButton x:Name="radbtnListingsPriceCustom" Content="" RenderTransformOrigin="0.421,0.467" BorderBrush="#FF89C3EC" Background="{x:Null}" BorderThickness="2" GroupName="priceRangeGroup" Checked="radbtnListingsPriceCustom_Checked" Unchecked="radbtnListingsPriceCustom_Unchecked" Margin="10,361,168,19"/>
            <ComboBox x:Name="comboxListingsPricePick" Width="156" HorizontalAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="comboxListingsPricePick_SelectionChanged" IsEnabled="False" Margin="34,322,10,46" Height="30">
                <ComboBoxItem Content="FREE" HorizontalAlignment="Left" Width="138"/>
                <ComboBoxItem Content="Under 100 EUR" HorizontalAlignment="Left" Width="138"/>
                <ComboBoxItem Content="Over 100 EUR" HorizontalAlignment="Left" Width="138"/>
            </ComboBox>
            <CheckBox x:Uid="1" x:Name="chboxListingsCategory0" Content="subcategory1" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="5,172,101,208"/>
            <CheckBox x:Uid="2" x:Name="chboxListingsCategory1" Content="subcategory2" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="100,172,6,208"/>
            <CheckBox x:Uid="3" x:Name="chboxListingsCategory2" Content="subcategory3" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="5,194,101,186"/>
            <CheckBox x:Uid="4" x:Name="chboxListingsCategory3" Content="subcategory4" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="100,194,6,186"/>
            <CheckBox x:Uid="5" x:Name="chboxListingsCategory4" Content="subcategory5" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="5,216,101,164"/>
            <CheckBox x:Uid="6" x:Name="chboxListingsCategory5" Content="subcategory6" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="100,216,6,164"/>
            <CheckBox x:Uid="8" x:Name="chboxListingsCategory7" Content="Other" Foreground="#FF06558D" Background="{x:Null}" BorderBrush="#FF89C3EC" BorderThickness="2" Checked="chboxListingsCategory" Unchecked="unChboxListingsCategory" Margin="5,238,101,142"/>
            <Label Content="Categories&#xA;" HorizontalContentAlignment="Center" Foreground="#FF06558D" Margin="50,111,50,258" FontSize="16"/>
            <Slider x:Name="slidListingsPriceCustom" Width="156" HorizontalAlignment="Center" VerticalAlignment="Center" AutoToolTipPlacement="BottomRight" Maximum="500" SmallChange="1" LargeChange="10" TickPlacement="BottomRight" TickFrequency="50" Value="-1" Cursor="Arrow" Background="{x:Null}" IsEnabled="False" Margin="34,361,10,7" Height="30" />
            <Label Content="Date Uploaded&#xA;" HorizontalContentAlignment="Center" Foreground="#FF06558D" Margin="34,21,36,186" FontSize="16" Grid.Row="1"/>
            <RadioButton x:Name="radbtnListingsDatePick" Content="" BorderBrush="#FF89C3EC" BorderThickness="2" Background="{x:Null}" Checked="radbtnListingsDatePick_Checked" Unchecked="radbtnListingsDatePick_Unchecked" Margin="10,53,168,161" Grid.Row="1"/>
            <ComboBox x:Name="comboxListingsDatePick" Width="156" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="{x:Null}" BorderBrush="#FFACACAC" SelectionChanged="comboxListingsDatePick_SelectionChanged" IsEnabled="False" Margin="34,47,10,156" Height="29" Grid.Row="1">
                <ComboBoxItem Content="Last week" HorizontalAlignment="Left" Width="138"/>
                <ComboBoxItem Content="Last month" HorizontalAlignment="Left" Width="138"/>
                <ComboBoxItem Content="Last year" HorizontalAlignment="Left" Width="138"/>
            </ComboBox>
            <RadioButton x:Name="radbtnListingsDatePick2" Content="" BorderBrush="#FF89C3EC" BorderThickness="2" Background="{x:Null}" Checked="radbtnListingsDatePick2_Checked" Unchecked="radbtnListingsDatePick2_Unchecked" Margin="10,91,168,123" Grid.Row="1"/>
            <DatePicker x:Name="datePicker" IsEnabled="False" Margin="34,87,10,120" Grid.Row="1"/>
            <Label Content="Sort by" Margin="50,1,50,362" Width="100" FontSize="18" HorizontalContentAlignment="Center" Height="35"/>
            <ComboBox x:Name="comboxListingsSortBy" Margin="10,36,10,337" SelectionChanged="comboxListingsSortBy_SelectionChanged" VerticalAlignment="Stretch" Background="#19000000" Height="25">
                <ComboBoxItem IsSelected="True" Content="Date"/>
                <ComboBoxItem Content="Price"/>
                <ComboBoxItem Content="Popularity"/>
            </ComboBox>
            <Label Content="Filters" Margin="50,76,50,287" Width="100" FontSize="18" HorizontalContentAlignment="Center" Height="35"/>
            <Rectangle Height="1" Margin="0,70,0,327" Stroke="#FFAAAAAA"/>
            <ComboBox x:Name="comboxListingsCategory" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="180" Background="#19000000" Height="25">
                <ComboBoxItem Content="Technology" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Clothing" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="White Pages" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Appliances" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Home" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Sports" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Hobby" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Outdoors" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Moto" HorizontalAlignment="Left" Width="178"/>
                <ComboBoxItem Content="Personal" HorizontalAlignment="Left" Width="178"/>
            </ComboBox>
        </Grid>
    </Canvas>
</Page>
