            <TextBox x:Name="txtboxRegisterEmail" TextWrapping="Wrap" Text="Email..." Margin="556,244,556,341"/>
            <TextBox x:Name="txtboxRegisterName" TextWrapping="Wrap" Text="Name..." Margin="556,272,556,313"/>
            <TextBox x:Name="txtboxRegisterSurname" TextWrapping="Wrap" Text="Surname..." Margin="556,300,556,285"/>
            <TextBox x:Name="txtboxRegisterPhone" TextWrapping="Wrap" Text="Phone number..." Margin="556,328,556,257"/>
            <Button x:Name="btnRegister" Content="Register" Background="White" BorderBrush="#FF1CBFA2" BorderThickness="1,1,3,3" Margin="576,401,576,178" Click="btnRegister_Click"/>
            <Label Content="Create an account" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="556,46,556,537"/>
            <ComboBox x:Name="comboxRegisterAddress" HorizontalAlignment="Left" Margin="556,357,0,0" VerticalAlignment="Top" Width="160" Height="24"/>
